@model LoginVm
@{
    ViewData["Title"] = "Login";
}

<h1>Giriş Bölümü</h1>
<form asp-action="Login" asp-route-returnURL="@Context.Request.Query["returnURL"]">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="KullaniciAdi" class="control-label"></label>
        <input type="text" class="form-control" asp-for="KullaniciAdi" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sifre" class="control-label"></label>
        <input type="password" class="form-control" asp-for="Sifre" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Kayıt Ol</button>
    </div>
</form>

